package com.example.hello;
/*
 * 기본 데이터 타입 data type
 *          정수형   문자형   실수형   논리형
 * 1byte    byte       -        -      boolean(t/f)
 * 2byte    short    char       -        -
 * 4byte    int        -      float      -
 * 8byte    long       -      double     -
 */
public class Lesson02_Type {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// 정수형 데이터 주로int
		byte var1 = -128;
		short svar = 10;
		int int1 = 1234567890;
		long long1 = 12345678900L;
		
		// 실수형 데이터 주로 float
		float float1 = 1.234f;
		double double1 = 1.234d;
		// 식별표시는 long형과 float형에 적어줘야함
		
		char ch1 = 'A';
	    //캐릭터 타입은 작은 따옴표
		char ch2[] = {'K', 'O', 'R'}; // charactre 배열
		String str = "KOREA";
		
		System.out.printf("%10.5f\n", float1);
		System.out.printf("%c\n", ch1);
		System.out.printf("char in numeric format : %d\n", (int)ch1);
		System.out.printf("%s\n", str);
		

	}

}
